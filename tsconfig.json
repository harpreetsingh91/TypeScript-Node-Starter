{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
                "causes_data/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "causes_data/Uphold_Human_Rights_Fund.json"
    ]
}